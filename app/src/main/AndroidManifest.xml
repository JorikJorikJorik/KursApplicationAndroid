<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.jorik.kursapplicationandroid">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="StateApplicationDataBase.db"/>
        <meta-data
            android:name="AA_MODELS"
            android:value="com.example.jorik.kursapplicationandroid.DataBase.StateApplicationDataBase"/>
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="5"/>

        <activity android:name=".View.Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".View.Activity.WorkListActivity"
            android:label="@string/title_activity_work_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".View.Activity.CreateDataActivity"
            android:label="@string/title_activity_data_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".View.Activity.DetailsActivity"
            android:label="@string/title_activity_details"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".View.Activity.DateActivity"
            android:label="@string/title_activity_date"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".View.Activity.SignInActivity"
            android:label="@string/title_activity_sign_in"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".View.Activity.RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>